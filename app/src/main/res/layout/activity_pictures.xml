<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dez.cameraapp.PicturesActivity"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD PICTURE"/>

        <EditText
            android:id="@+id/add_new_picture_name_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/label_picture_name"
            android:inputType="text" />
    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/button_search_for_pictures"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="SEARCH" />

        <EditText
            android:id="@+id/add_new_picture_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_picture_tag_hint"
            android:inputType="text" />
    </LinearLayout>

    <Button

        android:id="@+id/take_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"
        android:text="Take a picture" />

    <ImageView
        android:id="@+id/camera_picture"
        android:layout_width="300dp"
        android:layout_height="200dp" />


    <EditText
        android:id="@+id/add_new_picture_name_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/label_picture_name"/>



<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:padding="5dp"
    android:background="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ListView
        android:id="@+id/all_pictures_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>